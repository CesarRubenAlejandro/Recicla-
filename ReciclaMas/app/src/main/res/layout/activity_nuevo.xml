<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="itesm.mx.reciclamas.Activities.NuevoActivity">

    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/header"
        android:id="@+id/include" />
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="Nuevo registro"
    android:textSize="50dp"
    android:id="@+id/textView"
    android:layout_below="@+id/include"
    android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Material"
        android:id="@+id/textView7"
        android:textColor="#010101"
        android:layout_alignBottom="@+id/materialesSpnr"
        android:layout_alignStart="@+id/textView" />

    <Spinner
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/materialesSpnr"

        android:layout_column="20"
        android:layout_below="@+id/textView"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Cantidad"
        android:textColor="#010101"
        android:id="@+id/textView8"
        android:layout_alignBottom="@+id/cantidadET"
        android:layout_alignStart="@+id/textView7" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/cantidadET"
        android:layout_below="@+id/materialesSpnr"
        android:layout_alignStart="@+id/materialesSpnr" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/evidenciaBttn"
        android:src="@drawable/camera_icon"
        android:layout_below="@+id/cantidadET"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="evidencia"
        android:id="@+id/textView9"
        android:layout_below="@+id/evidenciaBttn"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@mipmap/ic_launcher"
        android:layout_below="@+id/textView9"
        android:layout_alignStart="@+id/cantidadET" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="guardar"
        android:id="@+id/guardarbttn"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Recuerda que tu eres el + honesto"
        android:id="@+id/textView10"
        android:layout_above="@+id/guardarbttn"
        android:layout_centerHorizontal="true"
        android:textStyle="italic"/>

</RelativeLayout>
